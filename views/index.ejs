<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <main class="main">
      <div class="message-container">
        <ul>
          <%if(messages.length > 0){%> <%messages.forEach(message=>{%>
          <li class="message-item">
            <h3><%=message.user%></h3>
            <h2><%=message.text%></h2>
            <p><%=message.added%></p>
          </li>
          <%})%> <%}%>
        </ul>
      </div>
    </main>
    <p><a href="/new">Add Message</a></p>
  </body>
</html>
